<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.tytcc.learn.repository.mapper.customized.UserDetailMapper">
    <resultMap id="BaseResultMap"
               type="top.tytcc.learn.repository.entity.customized.UserDetailEntity">
        <id column="user_id" jdbcType="INTEGER" property="userId"/>
        <result column="user_name" jdbcType="VARCHAR" property="userName"/>
        <result column="role_name" jdbcType="VARCHAR" property="roleName"/>
        <result column="role_permission" jdbcType="VARCHAR" property="rolePermission"/>
    </resultMap>
    <select id="selectUserDetailByUserId"
            parameterType="int"
            resultMap="BaseResultMap">
        select
        admin.`user_id`,
        admin.`user_name`,
        role.`role_name`,
        role.`role_permission`
        from
        admin
        left join role on admin.`user_role` = role.`role_id`
        where
        user_id = #{userId}
    </select>
</mapper>
